<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <!--
        Added the entity Location.
    -->
    <changeSet id="20150317105820" author="jhipster">
        <createTable tableName="T_LOCATION">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="lat" type="decimal(10,2)"/>
            <column name="lng" type="decimal(10,2)"/>
            <column name="alt" type="decimal(10,2)"/>
            <column name="timestamp" type="timestamp"/>
            <column name="speed" type="decimal(10,2)"/>
            <column name="heading" type="decimal(10,2)"/>
            <column name="track_id" type="bigint"/>
        </createTable>
        <dropDefaultValue tableName="T_LOCATION" columnName="timestamp" columnDataType="datetime"/>

        
        <addForeignKeyConstraint baseColumnNames="track_id"
                                 baseTableName="T_LOCATION"
                                 constraintName="fk_location_track_id"
                                 referencedColumnNames="id"
                                 referencedTableName="T_TRACK"/>

    </changeSet>
</databaseChangeLog>
